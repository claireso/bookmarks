doctype html
html
  head
    title= 'Bookmarks'
    meta(name='robots', content='noindex,nofollow')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,700')
  body

    div.wrapper
      div.wrapper__inner
        header.header.mt-only
          h1.header__title Bookmarks
          button#js-menu.btn-menu
            span

        main.app
          -if (typeof(categories) !== 'undefined')
            div.app__sidebar
              a.logo(href="/") Bookmarks

              ul.list--filters.js-filters
                - each category in categories
                  - if (category === activeCategory )
                    li.is-active
                      a(href="/category/" + encodeURIComponent(category)) #{category}
                  - else
                    li
                      a(href="/category/" + encodeURIComponent(category)) #{category}

              -if (typeof(user) == 'undefined')
                a.btn.btn--secondary.btn--l(href="/logout", class="logout") Sign out


          div.app__main
            block content

    script(src='/javascripts/app.js')
