doctype html
html
  head
    title= 'Bookmarks'
    meta(name='robots', content='noindex,nofollow')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Open+Sans:400,700')
  body

    //- header#header
    //-   a(href="/") Bookmarks

    //-   -if (typeof(user) == 'undefined')
    //-     a.pull-right(href="/logout", class="logout") Signout
    //-     a.pull-right.btn(href="bookmark/new") New bookmark

    main.app
      -if (typeof(categories) !== 'undefined')
        div.app__sidebar
          a.logo(href="/") Bookmarks
          ul.list--filters
            - each category in categories
              - if (category === activeCategory )
                li.is-active
                  a(href="/category/#{category}") #{category}
              - else 
                li
                  a(href="/category/#{category}") #{category}

          -if (typeof(user) == 'undefined')
            a.btn.btn--l(href="/logout", class="logout") Signout


      div.app__content
        block content