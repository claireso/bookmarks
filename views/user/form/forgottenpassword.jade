form(method='POST', action='/forgotten-password', class='form')
      
    -if (typeof(errors) != 'undefined')
        p.status.status--error= errors
    div.form__item
      label(for='email') Email
      input(type='email', id='email', name='email', class='form__field--text')

    div.form__submit.align-right
      input(type='submit', class='btn', value='Send')