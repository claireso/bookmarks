extends layout

block content

  div.toolbar.clearfix
    a.pull-right.btn(href="/bookmark/new") New bookmark

  -if (typeof(list) != 'undefined' && list.length)

    -each items in list
      section
        h1.heading-1.heading-ib= items.category
        a.more(href="/category/#{items.category}") View all

        -if (items.bookmarks.length)
          ul.list.list--large
            - each bookmark in items.bookmarks
              li.media
                include bookmark/_item

  - else
    section
      h1.heading-1 Welcome on Bookmarks!
      p You did not add bookmark
      a.btn(href="/bookmark/new") Add a bookmark
