.box
    .heading
        font-size: rem(28px)
        margin: 0 0 rem(20)
        line-height: 1.2
        //padding: 0 0 rem(10)
        //border-bottom: 1px solid $color-border
        

.box--white
    padding: rem(30)
    background: $color-white
    border: 1px solid $color-border
    margin: 0 auto
    position relative
    box-shadow: 0 0 4px rgba(136, 136, 136, 0.2)

    .logo-svg {
        position: absolute;
        left:50%;
        top:0;
        -webkit-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
    }

.box--logo {
    padding-top: rem(40)
}

.box--middle
    max-width:400px
    //margin:rem(80) auto 0

.box--table
    display:table
    width:100%
    height:100%

    > div
        display:table-cell
        vertical-align:middle